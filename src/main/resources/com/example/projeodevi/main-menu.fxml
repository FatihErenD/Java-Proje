<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeodevi.Controller">
   <top>
      <Pane prefHeight="100.0" prefWidth="1000.0" style="-fx-background-color: #89929b;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" layoutY="29.0" text="Kitap Yayıncılığı Otomasyonu" textFill="#21262d">
               <font>
                  <Font name="Arial Bold" size="36.0" />
               </font>
            </Label>
         </children></Pane>
   </top>
   <center>
      <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #ecf2f8;" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableView" layoutX="64.0" layoutY="50.0" prefHeight="393.0" prefWidth="614.0">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="201.0" text="Ad" />
                <TableColumn fx:id="authorColumn" prefWidth="248.0" text="Yazar" />
                  <TableColumn fx:id="dateColumn" prefWidth="164.0" text="Yayın Tarihi" />
              </columns>
            </TableView>
         </children></Pane>
   </center>
   <left>
      <VBox prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #c6cdd5;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" stylesheets="@button.css" text="Kitap Yayınla" textFill="#c6cdd5">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="40.0" right="10.0" top="100.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" stylesheets="@button.css" text="Yayınlanmış Kitaplar" textFill="#c6cdd5">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="40.0" right="10.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" stylesheets="@button.css" text="Dosyaya Kaydet" textFill="#c6cdd5">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="40.0" right="10.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" stylesheets="@button.css" text="Dosyadan Yükle" textFill="#c6cdd5">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="40.0" right="10.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitButtonClicked" prefHeight="40.0" prefWidth="200.0" stylesheets="@button.css" text="Çıkış Yap" textFill="#c6cdd5">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="40.0" right="10.0" top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
</BorderPane>
